<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ResultadoActivity">

    <View
        android:id="@+id/view"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:background="@drawable/background_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>


    <TextView
        android:id="@+id/confiraAbaixo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/belanosima_regular"
        android:gravity="center"
        android:text="Confira acima o resultado:"
        android:textColor="@color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:shadowColor="#80000000"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/belanosima_regular"
        android:gravity="center"
        android:maxLength="7"
        android:textColor="@color/primary_color"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:shadowColor="#80000000"
        android:textSize="68dp"

        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:text="CUSTO" />


    <TextView
        android:id="@+id/dadosInseridos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/belanosima_regular"
        android:text="Estes foram os dados inseridos:"
        android:textColor="@color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:shadowColor="#80000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confiraAbaixo" />


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dadosInseridos">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belanosima_regular"
                android:padding="8dp"
                android:text="Preço do combustível:"
                android:textColor="@color/white"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="#80000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_priceFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belanosima_regular"
                android:padding="8dp"
                android:textColor="@color/white"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="#80000000"
                android:textSize="16sp"
                tools:text="preço">

            </TextView>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belanosima_regular"
                android:padding="8dp"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="#80000000"
                android:text="Litros consumidos:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/edt_litros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belanosima_regular"
                android:padding="8dp"
                android:maxLength="4"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="#80000000"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="litros">
            </TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belanosima_regular"
                android:padding="8dp"
                android:text="Consumo:"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="#80000000"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_consumoFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belanosima_regular"
                android:padding="8sp"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="#80000000"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:text="consumo">

            </TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belanosima_regular"
                android:padding="8dp"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="#80000000"
                android:text="Distancia:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_distanciaFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belanosima_regular"
                android:padding="8sp"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="#80000000"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:text="Distancia">

            </TextView>
        </TableRow>


    </TableLayout>

